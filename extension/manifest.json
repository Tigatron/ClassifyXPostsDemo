{
  "manifest_version": 3,
  "name": "Classify X Bookmarks",
  "description": "Auto-scroll X bookmarks, summarize them with Chrome built-in AI, and classify the resultsã€‚",
  "version": "1.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Classify X Bookmarks"
  },
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://x.com/i/bookmarks*",
    "https://twitter.com/i/bookmarks*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/i/bookmarks*",
        "https://twitter.com/i/bookmarks*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
